#header
	a(href="/")
		#eustace
		#tny
			h1 The New Yorker
			h2.long Digital Edition Workflow Manager 
				span.gray 2.0
			h2.short DEWM 
				span.gray 2.0
	a.button#logout(href='/users/logout')
	if admin 
		a.button#manage(href='/admin')
	if user.access == 3
		a.button(href='/views/art') a
	else if user.access == 2
		a.button(href='/views/copy') c
	else
		a.button(href='/views/makeup') m
		a.button(href='/views/copy') c
		a.button(href='/views/art') a
	#user
		h2.userName #{name}
		h3.userDept #{dept}
	#issues
		select#week
			each date, i in dewm.dates.stringsFormatted
				if i == user.current
					option(value=i, selected="selected") #{date}
				else
					option(value=i) #{date}
+alert

mixin stacks(dept,active)
	ul#stacks(class=dept)
		if dewm.weeks[user.current].stacks != undefined
			each stack, i in dewm.weeks[user.current].stacks
				a(href="?stack="+stack.stack)
					if (stack.stack==active)
						+stack(dept,stack,"stack active")
					else
						+stack(dept,stack,"stack")

mixin stack(dept,content,status)
	if dept=="makeup"
		li(id=content.stack,class=status)
			div.number=content.stack
			div.head
				span.title=content.title
				if content.author != undefined && content.author.length>1
					span.author=" by "+content.author
			div.status
				div.web
				div.copy
				div.tablet
	else
		li(id=content.stack,class=status)
			div.number=content.stack
			div.head
				span.title=content.title
				if content.author != undefined && content.author.length>1
					span.author=" by "+content.author
			div.status
				div.web
				div.copy
				div.tablet

mixin viewer(url,dept)
	div.viewer
		if (dept=="copy")
			div#sidebar
				h4 There are currently 4 people reading this piece: 
					span.bold Alex, Amy, and Ryan.
				h4 You are assigned 
					span.bold part 2 of 5 
					| for this piece. 
					span.bold
						a Go &raquo;
				h2 Pick a size to read on
				img.ipad(src="/images/ipad.png" width="60%")
				img.iphone(src="/images/iphone5.png" width="30%")
		else
			div#sidebar
				img.ipad(src="/images/ipad.png" width="34%")
				img.ipadLandscape(src="/images/ipad-landscape.png" width="44%")
				img.iphone(src="/images/iphone5.png" width="16%")
		div#iframe
			iframe(src=url scroll="yes")
	script(src='/javascripts/viewer.js')

mixin makeupViewer(url)
	div.viewer
		div#iframe
			iframe(src=url scroll="yes")
	script(src='/javascripts/viewer.js')

mixin comments
	div.comments
		h2 Comments
			a(onclick="comments.newCommentToggle()") Add New
		div.newComment
			textarea.newCommentText(type='textarea', placeholder='Add comment text here.')
			div.newCommentSubmit(onclick="comments.newCommentSubmit()") Submit
			div.newCommentClose(onclick="comments.newCommentToggle()") Close
		ul
	script(src='/javascripts/comments.js')

mixin alert
	div#alert
		div#alertContent
			h2 Oh man, a stack was just deleted from the sidecar.
			h3 You're my only hope! Can you match up the old stack numbers (on the left) with the new ones (on the right)? If one of the old ones has been deleted from the issue, select 'Deleted from issue.' If there's any new stack that's left unmatched, it will be treated like a completely new stack.
			div.column
				h2 Old
				ul
					li stack one
					li stack one
					li stack one
			div.column
				h2 New
				ul
					li
						select
							option one
							option one
							option Deleted From Issue
					li
						select
							option one
							option one
							option Deleted From Issue
					li
						select
							option one
							option one
							option Deleted From Issue

